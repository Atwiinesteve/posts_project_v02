<%- include('partials/header') %>

    <%- include('partials/navbar') %>

    <div>

        <form style="width: 130%; height: 130%;" action="/api/update/post/" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title" class="form-label mt-4">Title</label>
                <input type="text" class="form-control" value="<%= post.title %>" name="title" placeholder="Enter Post Title">
              </div>
              <div class="form-floating mt-3" style="width: 100%; height: 70%;">
               <textarea class="form-control" value="<%= post.content %>" name="content" placeholder="Leave a comment here" style="width: 100%; height: 100%;"></textarea>
             </div>
              <div class="form-group">
                <label for="image" class="form-label mt-4">Image</label>
                <input type="file" class="form-control" value="<%= post.image %>" name="image">
              </div>
              <div class="form-group">
                <label for="author" class="form-label mt-4">Author</label>
                <input type="text" class="form-control" value="<%= post.author %>" name="author">
              </div>
           
              <button type="submit" class="btn btn-primary mt-3">Post</button>
        </form>

    </div>


<%- include('partials/footer') %>